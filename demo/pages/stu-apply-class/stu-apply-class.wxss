/* 每个信息的布局 文字+输入框 */

.all {
    /* padding: 20rpx; */
    position: fixed;
    margin-top: 10rpx;

}

.infor {
    position: flex;
    margin: 15rpx 0;
    margin-top: 34rpx;
}

.infor .infor-name {
    display: block;
    font-size: 30rpx;
    margin-left: 42rpx;
    margin-bottom: 16rpx;
}


.infor .infor-input {
    width: 650rpx;
    height: 100rpx;
    margin: 10rpx 0;
    margin-left: 20rpx;
    background-color: #fff;
    border-radius: 45rpx;
    box-shadow: rgba(92, 140, 197, 0.2) 0 0 2px 2px;
    font-size: 30rpx;
    padding-left: 42rpx;
}

.infor .input-no-change{
    background-color: rgba(171, 176, 182, 0.1);

}

.infor .input-text {
    display: flex;
    z-index: 1;
    font-size: 25rpx;
    color: rgba(209, 209, 209, 1);

}
textarea{
    padding: 10rpx;
}

.sanjiao{
    position: absolute;
    margin-top: 25rpx;
    right: 80rpx;
    color: #333
}



/*隐藏滚动条*/

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

/* 滑动选择器 */


picker-view {
    width: 100%;
    height: 150px;
    position: fixed;
    bottom: 0;
    display: block;
    background-color: #fff;
}

picker-view .design {
    position: fixed;
    margin-top: -90rpx;
    width: 100%;
}

picker-view .design button {
    display: inline-block;
    width: 100%;
    color: rgba(14, 124, 255, 1);
    /* border-top: 1px solid  rgba(14, 124, 255, 0.);   
    border-bottom: 1px solid  rgba(14, 124, 255, 1);    */
    background-color: white;
}

.picker-view-check {
    border-top: 1px solid rgba(14, 124, 255, 0.2);
    border-bottom: 1px solid rgba(14, 124, 255, 0.2);
    color: white;
}

.picker-view-mask {
    border-bottom: 1px solid rgba(14, 124, 255, 0.2);
    /* background-color:rgba(155, 197, 248, 0.2); */
}

picker-view-column view {
    text-align: center;
}

.mask-type {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba( 220, 220, 220, 0.6);
    z-index: 4;
}

.picker-title {
    margin-top: -3rpx;
    position: fixed;
    display: block;
    z-index: 5;
    font-weight: bold;
    background-color: white;
    /* background-color:rgb(241, 244, 248); */
    width: 100%;
    line-height: 80rpx;
    text-align: center;
}

.picker-title text {
    display: inline-block;
    width: 33.3%;
}

.picker-title1 text {
    display: inline-block;
    width: 50%;
}

.submit-button{
    color: #fff;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    width: 35%;
    background-color:rgba(38, 137, 255,1);
}